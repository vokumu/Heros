{{#partial "title" }}
    Create a Custom Greeting!
{{/partial}}
<!--form.hbs.-->
{{#partial "content"}}
    <div class="container">
        <h5>Fill in your name and your friend's name to create your custom greeting!</h5>
        <form action='/squadAddition'>
            <div class="form-group">
                <label for="name">Sqaud Name</label>
                <input id="name" name="name" class="form-control" type="text">
            </div>
            <div class="form-group">
                <label for="maxSize">Maximum Size</label>
                <input id="maxSize" name="maxSize" class="form-control" type="number">
            </div>
            <div class="form-group">
                <label for="fightingCause">Fighting Cause</label>
                <input id="fightingCause" name="fightingCause" class="form-control" type="text">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block">Add</button>
            </div>
        </form>
    </div>

    <div class="container">

        {{#each mySquads}}
            <p>1</p>
            <h3>Your rectangle's height is {{maxSize}}</h3>
            <h3>Your rectangle's width is {{name}}</h3>
            <h3>Your rectangle's width is {{fightingCause}}</h3>
        {{/each}}
    </div>



    <!--form.hbs.-->
{{/partial}}

